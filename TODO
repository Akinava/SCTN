# rebuild and run project in local containers
docker-compose -f ./docker/docker-compose.yml up --build

# build image
docker build -f docker/Dockerfile -t sctn:v0 .

# build and run container interactive
docker run -it sctn:v0

# start container interactive
docker start -i sctn_0

# run client local
python3 test/test_peer.py -p tmp/peers.json -c tmp/config1.json -s tmp/shadow1
python3 test/test_peer.py -p tmp/peers.json -c tmp/config2.json -s tmp/shadow2
python3 test/test_peer.py -p tmp/peers.json -c tmp/config3.json -s tmp/shadow3

# run server local
python3 src/server_host.py -c docker/config.json -s docker/shadow

